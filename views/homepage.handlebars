<div class="columns is-desktop">
  {{#if logged_in}}
    <!--col for user data-->
    <div class="column is-one-quarter is-flex is-flex-direction-column is-align-items-center">
      <p>{{current_username}}</p>

      <!-- User prof img -->
      <figure class="image is-128x128">
        <img class="is-rounded" src="https://bulma.io/assets/images/placeholders/128x128.png" />
      </figure>

      <!--user data-->
      <nav class="level">
        <div class="level-item has-text-centered">
          <div>
            <p class="heading">Posts</p>
            <p class="title">{{userPosts.length}}</p>
          </div>
        </div>
        <div class="level-item has-text-centered">
          <div>
            <p class="heading">Following</p>
            <p class="title">{{numFollowing}}</p>
          </div>
        </div>
        <div class="level-item has-text-centered">
          <div>
            <p class="heading">Followers</p>
            <p class="title">{{numFollowers}}</p>
          </div>
        </div>
        <div class="level-item has-text-centered">
          <div>
            <p class="heading">Likes</p>
            <p class="title">{{numLikes}}</p>
          </div>
        </div>
      </nav>

      <!--users recent photos-->
      <div class="fixed-grid has-3-cols">
        <div class="grid">
          {{#if userPosts.length}}
            {{#each userPosts}}
              {{#if this.image_url}}
                <div class="cell"><img src="{{this.image_url}}" alt="Post Image"></div>
              {{/if}}
            {{/each}}
          {{else}}
          {{/if}}
        </div>
      </div>
    </div>
  {{/if}}

  <!--center col for posts-->
  <div class="column is-half is-scrollable">
    {{#if posts.length}}
      {{#each posts}}
        <!--placeholder post-->
        <div class="card">
          {{#if this.image_url}}
            <div class="card-image">
              <figure class="image">
                <img src="{{this.image_url}}" width="1280" alt="Post image" />
              </figure>
            </div>
          {{/if}}
          <div class="card-content">
            <div class="media">
              <div class="media-left">
                <figure class="image is-48x48">
                  <img src="https://bulma.io/assets/images/placeholders/96x96.png" class="is-rounded" alt="Placeholder image" />
                </figure>
              </div>
              <div class="media-content">
                {{#if (equals this.user_id current_user_id)}}
                  <p class="title is-4"><a href="/dashboard">{{this.user.username}}</a></p>
                {{else}}
                  <p class="title is-4"><a href="/user/{{this.user_id}}">{{this.user.username}}</a></p>
                {{/if}}
              </div>
            </div>

            <div class="content">
              <p>{{this.content}}</p>
              <button class="like-btn button is-primary" data-id="{{this.id}}">Like</button>
              <span id="like-count-{{this.id}}">{{this.numLikes}} likes</span>
              <br />
              <p>Posted on {{format_date this.createdAt}}</p>
            </div>
          </div>
        </div>
      {{/each}}
    {{/if}}
  </div>

  <!--col for chat-->
  {{#if logged_in}}
    <div class="column is-one-quarter is-flex is-flex-direction-column is-align-items-center is-scrollable">
      <h2>Chat</h2>
      {{#if mutuals.length}}
        {{#each mutuals}}
          <div class="card chatCard">
            <div class="card-content">
              <div class="media">
                <div class="media-left">
                  <figure class="image is-48x48">
                    <img class="is-rounded" src="https://bulma.io/assets/images/placeholders/128x128.png" />
                  </figure>
                </div>
                <div class="media-content">
                  <p class="title is-6">{{this.username}}</p>
                </div>
              </div>
            </div>
          </div>
        {{/each}}
      {{/if}}
    </div>
  {{/if}}
</div>

<script src="/js/likePost.js"></script>
<script src="/js/follow.js"></script>