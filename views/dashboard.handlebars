<div class="columns">

  {{!-- user col --}}
  <div class="column is-one-third is-flex is-flex-direction-column is-align-items-center">

    {{!-- update prof pic --}}
    <div class="file is-primary has-name">
      <label class="file-label">
        <input class="file-input" type="file" name="resume" />
        <span class="file-cta">
          <span class="file-icon">
            <i class="fas fa-upload"></i>
          </span>
        </span>
        <span class="file-name"> Update user pic </span>
      </label>
    </div>

    {{!-- user pic --}}
    <figure class="image is-128x128">
      <img class="is-rounded" src="https://bulma.io/assets/images/placeholders/128x128.png" /> {{!-- update to user
      picture --}}
    </figure>

    {{!-- username --}}
    <p>{{username}}</p>

    {{!-- followers and following --}}
    <nav class="level">
      <div class="level-item has-text-centered">
        <div>
          <p class="heading">Followers</p>
          <p class="title">{{numFollowers}}</p>
        </div>
      </div>
      <div class="level-item has-text-centered">
        <div>
          <p class="heading">Following</p>
          <p class="title">{{numFollowing}}</p>
        </div>
      </div>
    </nav>

    <div class="columns is-full-width">
      {{!-- followers --}}
      <div class="column is-one-half is-flex is-flex-direction-column is-align-items-center">
        <ul>
          {{#each followers}}
          <li><a href="/user/{{this.id}}">{{this.username}}</a></li>
          {{/each}}
        </ul>
      </div>

      {{!-- following --}}
      <div class="column is-one-half is-flex is-flex-direction-column is-align-items-center">
        <ul>
          {{#each following}}
          <li><a href="/user/{{this.id}}">{{this.username}}</a></li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>

  {{!-- col for posts --}}
  <div class="column is-one-third is-flex is-flex-direction-column is-align-items-center">

    {{!-- posts --}}
    {{#if posts.length}}
    {{#each posts}}
    <div class="post">
      <h2>{{this.title}}</h2>
      {{#if this.image_url}}
      <img src="{{this.image_url}}" height="auto" width="400" alt="Post Image">
      {{/if}}
      <button class="like-btn" data-id="{{this.id}}">Like</button>
      <span id="like-count-{{this.id}}">{{this.numLikes}} likes</span>
      <p>Posted on {{format_date this.createdAt}}</p>
      <a href="/post/{{this.id}}">Read More</a>
      <div>
        <button class="edit-post-btn" data-id="{{this.id}}">Edit</button>
        <button class="delete-post-btn" data-id="{{this.id}}">Delete</button>
      </div>
    </div>
    {{/each}}
    {{else}}
    <p>No posts yet</p>
    {{/if}}
  </div>

  {{!-- col for add posts --}}
  <div class="column is-one-third is-flex is-flex-direction-column is-align-items-center">

    {{!-- form start --}}
    <form id="new-post-form" enctype="multipart/form-data">
      {{!-- file --}}
      <div id="file-js" class="file has-name is-primary">
        <label class="file-label">
          <input class="file-input" type="file" name="resume" />
          <span class="file-cta">
            <span class="file-icon">
              <i class="fas fa-upload"></i>
            </span>
            <span class="file-label"> Choose a fileâ€¦ </span>
          </span>
          <span class="file-name"> No file uploaded </span>
        </label>
      </div>

      {{!-- caption --}}
      <div class="control custom-form-width">
        <textarea class="textarea is-hovered" placeholder="Caption"></textarea>
      </div>

      {{!-- button --}}
      <input class="button is-primary mt-3 custom-form-width" type="submit" value="preview post" />
    </form>

    
    {{!-- form data --}}
    {{!-- <form id="new-post-form" enctype="multipart/form-data">
      <input type="text" name="title" id="post-title" placeholder="Title" required>
      <input type="file" name="image" id="post-image">
      <textarea name="content" id="post-content" placeholder="Content" required></textarea>
      <button type="submit">Create Post</button>
    </form> --}}

    {{!-- section for preview --}}
    <section class="section is-medium">
      <p>preview post</p>
    </section>
  </div>
</div>








