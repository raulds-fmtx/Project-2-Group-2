<div class="columns">

  {{!-- user col --}}
  <div class="column is-one-third is-flex is-flex-direction-column is-align-items-center is-full-width">

    {{!-- update prof pic change --}}
    <div class="file is-primary has-name">
      <label class="file-label">
        <input class="file-input" type="file" name="resume" />
        <span class="file-cta">
          <span class="file-icon">
            <i class="fas fa-upload"></i>
          </span>
        </span>
        <span class="file-name">Update profile pic</span>
      </label>
    </div>

    {{!-- user pic --}}
    <figure class="image is-128x128">
      <img class="is-rounded" src="https://bulma.io/assets/images/placeholders/128x128.png" /> {{!-- update to user
      picture --}}
    </figure>

    {{!-- username --}}
    <h1 class="is-primary">{{username}}</h1>

    {{!-- follow user button --}}
    <button class="button is-primary" id="followBtn">follow '{{username}}'</button>

    {{!-- followers and following label --}}
    <nav class="level py-2 ">
      <div class="level-item has-text-centered">
        <div class="px-4">
          <p class="heading">Followers</p>
          <p class="title">{{numFollowers}}</p>
        </div>
      </div>
      <div class="level-item has-text-centered">
        <div class="px-4">
          <p class="heading">Following</p>
          <p class="title">{{numFollowing}}</p>
        </div>
      </div>
    </nav>

    {{!-- followers and following --}}
    <div class="columns custom-col-width">


      {{!-- followers --}}
      <div class="column is-one-half is-scrollable">

        {{!-- follower card --}}
        <div class="card followerCard">
          <div class="card-content">
            <div class="media is-flex is-justify-content-baseline">
              <div class="media-left">
                <figure class="image is-48x48">
                  <img class="is-rounded" src="https://bulma.io/assets/images/placeholders/128x128.png" />
                </figure>
              </div>
              <div class="media-content">
                <p class="title is-4">John Smith</p>
              </div>
            </div>
          </div>
        </div>

        <ul>
          {{#each followers}}
          <li><a href="/user/{{this.id}}">{{this.username}}</a></li>
          {{/each}}
        </ul>
      </div>

      {{!-- following --}}
      <div class="column is-one-half is-scrollable">
        <ul>
          {{#each following}}
          <li><a href="/user/{{this.id}}">{{this.username}}</a></li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>

  {{!-- col for posts --}}
  <div class="column is-one-third is-flex is-flex-direction-column is-align-items-center is-scrollable">
    {{!-- posts --}}
    {{#if posts.length}}
    {{#each posts}}
    <div class="post">
      <h2>{{this.title}}</h2>
      {{#if this.image_url}}
      <img src="{{this.image_url}}" height="auto" width="400" alt="Post Image">
      {{/if}}
      <button class="like-btn" data-id="{{this.id}}">Like</button>
      <span id="like-count-{{this.id}}">{{this.numLikes}} likes</span>
      <p>Posted on {{format_date this.createdAt}}</p>
      <a href="/post/{{this.id}}">Read More</a>
      <div>
        <button class="edit-post-btn" data-id="{{this.id}}">Edit</button>
        <button class="delete-post-btn" data-id="{{this.id}}">Delete</button>
      </div>
    </div>
    {{/each}}
    {{else}}
    <p>No posts yet</p>
    {{/if}}
  </div>

  {{!-- col for add posts --}}
  <div class="column is-one-third is-flex is-flex-direction-column is-align-items-center">

    {{!-- form start --}}
    <form id="new-post-form" enctype="multipart/form-data">
      {{!-- file --}}
      <div id="file-js" class="file has-name is-primary">
        <label class="file-label">
          <input class="file-input" type="file" name="resume" />
          <span class="file-cta">
            <span class="file-icon">
              <i class="fas fa-upload"></i>
            </span>
            <span class="file-label"> Choose a fileâ€¦ </span>
          </span>
          <span class="file-name"> No file uploaded </span>
        </label>
      </div>

      {{!-- caption --}}
      <div class="control custom-form-width">
        <textarea class="textarea is-hovered" placeholder="Caption"></textarea>
      </div>

      {{!-- button --}}
      <input class="button is-primary mt-3 custom-form-width" type="submit" value="Add post" />
    </form>
  </div>
</div>

<script src="/js/addPost.js"></script>
<script src="/js/editPost.js"></script>
<script src="/js/deletePost.js"></script>
<script src="/js/likePost.js"></script>
<script src="../public/js/follow.js"></script>